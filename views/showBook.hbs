<nav>
  <a class="link" href="/">Home</a>
  <a class="link" href="/books">View all books</a>
  <a class="link" href="/authors">View all authors</a>
</nav>

<div class="book">
	<h1>{{this.title}} ({{this.year}})</h1>
	<h3> - {{this.first_name}} {{this.last_name}}</h3>
  <p>Read it? {{this.have_read}}</p>
	<p><strong>Google says: </strong> {{this.description}}</p>
  <p><img src="http://covers.librarything.com/devkey/{{this.key}}/medium/isbn/{{this.isbn}}" /></p>
	<p><strong>Rich says: </strong> {{this.my_description}}</p>
	<form action="/books/edit/{{this.id}}">
	  <input type="submit" value="Edit this book">
  </form>
</div>