<h1>Rich's Book Catalogue</h1>
<nav>
  <a class="link" href="/books">View all the books</a>
  <a class="link" href="/authors">View all the authors</a>
</nav>

<ul>
  <div class="book">
    <li>{{this.title}} - {{this.year}}</li>
    <li>By {{this.first_name}} {{this.last_name}}</li>
    <a href="/books/{{this.id}}"><img src="http://covers.librarything.com/devkey/{{this.key}}/medium/isbn/{{this.isbn}}" /></a>
  </div>
</ul>
