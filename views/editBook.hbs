<h1>Edit this book</h1>

<nav>
  <a class="link" href="/books/{{this.id}}">Cancel edit</a>
</nav>

<div>
	<h1>{{this.title}} ({{this.year}})</h1>
	<h3> - {{this.first_name}} {{this.last_name}}</h3>
</div>

<form class="new_book" id="new_book" action="/books/{{this.id}}" accept-charset="UTF-8" method="post">

	<p>
		Have I read it?<br><br>
	  <input type="radio" name="have_read" value=1 /> Yes<br><br>
	  <input type="radio" name="have_read" value=0 /> No<br><br>
	  <input placeholder="Rich's description" type="text" name="my_description" id="my_desc" value="{{this.my_description}}"/><br><br>
	  <input type="submit"  value="Submit changes" />
	</p>

</form>